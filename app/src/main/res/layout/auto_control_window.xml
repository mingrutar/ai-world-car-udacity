<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/gap_medium"
    android:layout_marginLeft="@dimen/gap_medium"
    android:layout_marginRight="@dimen/gap_medium"
    android:layout_marginBottom="@dimen/gap_medium"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/udacitycar"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/steer_wheel"/>
        <TextView
            android:id="@+id/driving_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/gap_small"
            android:layout_marginRight="@dimen/gap_small"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="MPH"/>
        <TextView
            android:id="@+id/driving_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/speed_font_size"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/driving_speed_unit"
            android:text="20"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:onClick="toggleDrivingMode">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/driving_mode_size"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_large"
                android:layout_marginRight="@dimen/gap_large"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_driving_auto_24dp"  />
            <TextView
                android:id="@+id/driving_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/colorAutoDriving"
                android:textColor="@android:color/white"
                android:padding="@dimen/gap_small"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="@string/mode_auto_cruise" />
        </LinearLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/driving_gear"
            android:layout_width="@dimen/driving_mode_height"
            android:layout_height="@dimen/driving_mode_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/gap_medium"
            android:scaleType="fitCenter"
            android:src="@drawable/gear" />
   </RelativeLayout>
</android.support.v7.widget.CardView>